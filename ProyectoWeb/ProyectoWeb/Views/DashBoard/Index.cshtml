
@{
    ViewBag.Title = "Resultados";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<nav aria-label="breadcrumb">
    <ol class="breadcrumb">
        <li class="breadcrumb-item" aria-current="page">Resultados</li>
    </ol>
</nav>

<div class="row mb-4">
    <div class="col-sm-12">
        <div class="card border-dark">
            <div class="card-header text-white bg-dark">
                <h5 class="float-left">Seleccione una elección</h5>
                <button class="btn btn-light btn-sm float-right" data-toggle="collapse" data-target="#collapseOne" aria-expanded="true" aria-controls="collapseOne">
                    <i class="fas fa-align-justify"></i>
                </button>
            </div>
            <div class="collapse show" id="collapseOne">
                <div class="card-body">

                    <div class="row align-items-end">
                        <div class="col-sm-10">
                            <div class="form-group">
                                <label for="cboelecciones">Elecciones:</label>
                                <select id="cboelecciones" class="form-control"></select>
                            </div>
                        </div>
                        <div class="col-sm-2">
                            <div class="form-group">
                                <button class="btn btn-primary btn-block" type="button" onclick="buscarResultados()"> <i class="fas fa-search"></i> Buscar Resultados</button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


<div class="row">
    <div class="col-sm-12">
        <div class="card border-dark">
            <div class="card-header text-white bg-dark">
                <h5 class="float-left">Resultados</h5>
            </div>
            <div class="card-body card-resultados">
                <div id="main" style="width: 100%;height:400px;"></div>

            </div>

        </div>

    </div>
</div>


@section scripts{
    <script src="@Url.Content("~/Scripts/Views/Resultado_Index.js")" type="text/javascript"></script>
}



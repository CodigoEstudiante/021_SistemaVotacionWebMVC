
@{
    ViewBag.Title = "Usuarios";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@section estilos{
    <style>
        span.error {
            color: red;
            font-size: 0.8em;
            font-weight: bold;
        }
    </style>
}

<nav aria-label="breadcrumb">
    <ol class="breadcrumb">
        <li class="breadcrumb-item" aria-current="page">Usuarios</li>
    </ol>
</nav>

<div class="row">
    <div class="col-sm-12">
        <div class="card border-dark">
            <div class="card-header text-white bg-dark">
                <h5 class="float-left">Lista de Usuarios</h5>
                <button class="btn btn-success btn-sm float-right" onclick="abrirPopUpForm(null)">
                    <i class="fa fa-plus" aria-hidden="true"></i> Agregar Nuevo
                </button>
            </div>
            <div class="card-body">
                <table id="tbdata" class="table table-striped table-bordered" style="width:100%">
                    <thead>
                        <tr>
                            <th>Documento Identidad</th>
                            <th>Nombres</th>
                            <th>Apellidos</th>
                            <th>Correo</th>
                            <th>Estado</th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody></tbody>
                </table>
            </div>

        </div>

    </div>
</div>


<!-- Modal -->
<div class="modal fade" id="FormModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-header bg-dark text-white">
                <h5 class="modal-title" id="exampleModalLabel">Usuario</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <input id="txtid" type="hidden" value="0" />

                <form id="formNivel">
                    <div class="row">
                        <div class="col-sm-6">
                            <div class="form-group">
                                <label for="txtdocumentoidentidad">Documento Identidad <span class="error"></span></label>
                                <input type="text" class="form-control required" id="txtdocumentoidentidad" name="documentoidentidad" autocomplete="9%%943511">
                            </div>
                        </div>
                        <div class="col-sm-6">
                            <div class="form-group">
                                <label for="txtnombres">Nombres <span class="error"></span></label>
                                <input type="text" class="form-control required" id="txtnombres" name="nombres" autocomplete="9%%943511">
                            </div>
                        </div>
                    </div>


                    <div class="row">
                        <div class="col-sm-6">
                            <div class="form-group">
                                <label for="txtapellidos">Apellidos <span class="error"></span></label>
                                <input type="text" class="form-control required" id="txtapellidos" name="apellidos" autocomplete="9%%943511">
                            </div>
                        </div>
                        <div class="col-sm-6">
                            <div class="form-group">
                                <label for="txtcorreo">Correo <span class="error"></span></label>
                                <input type="text" class="form-control required" id="txtcorreo" name="correo" autocomplete="9%%943511">
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-sm-6">
                            <div class="form-group">
                                <label for="txtclave">Contraseña <span class="error"></span></label>
                                <input type="password" class="form-control required" id="txtclave" name="clave" autocomplete="9%%943511">
                            </div>
                        </div>
                        <div class="col-sm-6">
                            <div class="form-group">
                                <label for="cboEstado">Estado</label>
                                <select id="cboEstado" class="form-control">
                                    <option value="1">Activo</option>
                                    <option value="0">No Activo</option>
                                </select>
                            </div>
                        </div>
                    </div>

                </form>

            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-danger" data-dismiss="modal">Cerrar</button>
                <button type="button" class="btn btn-primary" onclick="Guardar()">Guardar</button>
            </div>
        </div>
    </div>
</div>

@section scripts{
    <script src="@Url.Content("~/Scripts/Views/Usuario_Index.js")" type="text/javascript"></script>
}

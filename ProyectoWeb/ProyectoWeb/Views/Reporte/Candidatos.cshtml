
@{
    ViewBag.Title = "Candidatos";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section estilos{
    <style>
        #inner-right {
            max-height: 300px;
            overflow-y: scroll;
        }
    </style>
}



<nav aria-label="breadcrumb">
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a href="#">Reportes</a></li>
        <li class="breadcrumb-item active" aria-current="page">Candidatos</li>
    </ol>
</nav>

<div class="row mb-4">
    <div class="col-sm-12">
        <div class="card border-dark">
            <div class="card-header text-white bg-dark">
                <h5 class="float-left">Seleccione una elección</h5>
                <button class="btn btn-light btn-sm float-right" data-toggle="collapse" data-target="#collapseOne" aria-expanded="true" aria-controls="collapseOne">
                    <i class="fas fa-align-justify"></i>
                </button>

            </div>
            <div class="collapse show" id="collapseOne">
                <div class="card-body">

                    <div class="row align-items-end">
                        <div class="col-sm-10">
                            <div class="form-group">
                                <label for="cboelecciones">Elecciones:</label>
                                <select id="cboelecciones" class="form-control"></select>
                            </div>
                        </div>
                        <div class="col-sm-2">
                            <div class="form-group">
                                <button class="btn btn-primary btn-block" type="button" onclick="buscarCandidatos()"> <i class="fas fa-search"></i> Buscar Candidatos</button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


<div class="row">
    <div class="col-sm-12">
        <div class="card border-dark">
            <div class="card-header text-white bg-dark">
                <h5 class="float-left">Lista de Candidatos</h5>
            </div>
            <div class="card-body">

                <div class="row mb-2">
                    <div class="col-sm-12">
                        <button class="btn btn-info float-left" onclick="printData()">
                            <i class="fas fa-print"></i> Imprimir
                        </button>

                    </div>
                </div>

                <div class="row" id="inner-right">
                    <div class="col-sm-12">
                        <table id="tbdata" class="table table-striped table-bordered table-sm table-responsive-sm" style="width:100%">
                            <thead class="thead-dark">
                                <tr>
                                    <th>Foto</th>
                                    <th>Nombres</th>
                                    <th>Mensaje</th>
                                </tr>
                            </thead>
                            <tbody></tbody>
                        </table>
                    </div>
                </div>

            </div>

        </div>

    </div>
</div>


@section scripts{

    <script src="@Url.Content("~/Scripts/Views/Reporte_Candidato.js")" type="text/javascript"></script>
}

